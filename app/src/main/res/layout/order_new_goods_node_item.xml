<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:minHeight="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_new_goods_node_item_node_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/buttonsContainer"
            android:layout_weight="0.3"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="0.7"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_new_goods_node_item_balance_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/new_green"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/order_new_goods_node_item_price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/main_grey"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/order_new_goods_node_item_order_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/red_indicator"
                android:textSize="18sp"
                android:visibility="invisible"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
