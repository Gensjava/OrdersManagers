<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/pay_relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom"
        android:background="@android:color/background_light"
        android:clickable="true"
        android:foregroundGravity="bottom"
        android:gravity="center"
        tools:ignore="UnknownIdInLayout">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView4"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/pay_heander_lient"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pay_heander"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/header_date"
                tools:ignore="ObsoleteLayoutParam" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="58dp"
                android:text="Номер"
                tools:ignore="ObsoleteLayoutParam" />
        </LinearLayout>

        <TextView
            android:id="@+id/pay_heander_lient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linearLayout4"
            android:layout_marginEnd="22dp"
            android:layout_toStartOf="@+id/pay_heander_text_sum"
            android:paddingRight="10dp"
            android:text="Сумма          Долг"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/pay_heander_text_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:text="Оплата" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/linearLayout4"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="76dp"
            android:layout_marginLeft="20dp"
            android:text="№"
            tools:ignore="ObsoleteLayoutParam" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pay_relativeLayout2">

        <LinearLayout
            android:id="@+id/pay_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/main_grey"
            android:gravity="center|end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay_dogs_container_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="5dp"
                android:text="Сумма:"
                android:textColor="#ffffff"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/pay_dogs_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="0.00"
                android:textColor="#ffffff"
                android:textSize="22dp" />

        </LinearLayout>

        <ListView
            android:id="@+id/pay_select_dogs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/pay_linearLayout"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:id="@+id/pay_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/pay_dogs_container_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginBottom="64dp"
                android:layout_marginEnd="29dp"
                android:layout_marginRight="20dp"
                android:alpha="0.5"
                android:src="@mipmap/ic_arrow_right"
                tools:ignore="UnknownIdInLayout" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>