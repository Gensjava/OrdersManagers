<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/order_new_cart_list_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="счетчик"
            android:textIsSelectable="false"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/order_new_cart_list_item_name"
            android:layout_width="170dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/order_new_cart_list_item_number"
            android:layout_toRightOf="@+id/order_new_cart_list_item_number"
            android:text="товар"
            android:textIsSelectable="true"
            android:textSize="12dp"
            android:textStyle="normal"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/order_new_cart_list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:text="Цена"
            android:textIsSelectable="true"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/order_new_cart_list_item_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/order_new_cart_list_item_price"
            android:layout_alignStart="@+id/order_new_cart_list_item_price"
            android:layout_below="@+id/order_new_cart_list_item_price"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Сумма"
            android:textIsSelectable="false"
            android:textSize="12dp"/>

        <Spinner
            android:id="@+id/order_new_cart_list_item_menu_n"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/ic_clik_menu">

        </Spinner>

        <TextView
            android:id="@+id/order_new_cart_list_item_name_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/order_new_cart_list_item_menu_n"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/order_new_cart_list_item_price"
            android:layout_toStartOf="@+id/order_new_cart_list_item_price"
            android:text="к-во"
            android:textIsSelectable="false"
            android:textSize="12dp"
            android:textStyle="bold"/>
    </RelativeLayout>

</RelativeLayout>