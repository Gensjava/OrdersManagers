<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/order_header_list_item_image_avatar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/order_header_list_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="text"

        android:textColor="@color/space"
        android:textIsSelectable="true"
        android:textSize="14dp"/>

    <ImageView
        android:id="@+id/order_header_list_item_image_menu"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_sub_arrow_right"/>

</RelativeLayout>