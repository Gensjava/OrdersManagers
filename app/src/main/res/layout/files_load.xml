<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:ppv="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:gravity="center"
        android:orientation="vertical">

        <com.filippudak.ProgressPieView.ProgressPieView
            android:id="@+id/load_files_progressPieView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/load_files_button"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/load_files_button"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_weight="0.4"/>

        <Button
            android:id="@+id/load_files_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/load_files_progressPieView"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1.3"
            android:longClickable="false"
            android:text="ЗАГРУЗИТЬ"
            android:textColor="@color/abc_primary_text_material_dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:orientation="vertical">

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/load_files_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/load_files_button"
            android:layout_marginTop="20dp"
            app:dsb_indicatorColor="@color/colorAccent"
            app:dsb_max="0"
            app:dsb_min="0"
            app:dsb_progressColor="@color/colorAccent"
            app:dsb_rippleColor="@color/colorAccent"
            app:dsb_trackColor="@color/main_grey"/>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/load_files_seekBar"
            android:layout_centerHorizontal="true"
            >

            <TextView
                android:id="@+id/load_files_text_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_marginBottom="88dp"
                android:text="0%"
                android:textColor="?attr/colorAccent"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/load_files_imageView"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"

                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="70dp"
                    android:layout_marginStart="47dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/ic_info"/>

                <TextView
                    android:id="@+id/load_files_text"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/load_files_imageView"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/load_files_imageView"
                    android:layout_toRightOf="@+id/load_files_imageView"
                    android:text="Информация о загрузке..."

                    android:textColor="@color/main_grey"
                    android:textIsSelectable="false"
                    android:textSize="12dp"
                    android:textStyle="italic"/>


            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/load_files_image_button_n"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignEnd="@+id/relativeLayout3"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignRight="@+id/relativeLayout3"
                android:layout_gravity="right"
                android:layout_marginBottom="33dp"
                android:layout_marginRight="20dp"
                android:alpha="0.5"
                android:src="@mipmap/ic_arrow_right"
                android:visibility="invisible"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>