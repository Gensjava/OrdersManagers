<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    style="@android:style/Widget.ActionButton"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/main_tool_bar_cart_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:contentDescription="bell"
        android:gravity="center"
        android:src="@mipmap/ic_cart"
        />

    <TextView
        android:id="@+id/main_tool_bar_cart_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/main_tool_bar_cart_image"
        android:layout_alignTop="@+id/main_tool_bar_cart_image"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/rounded_square"
        android:gravity="center"
        android:minWidth="19sp"
        android:paddingBottom="1dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@null"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        android:visibility="invisible"/>


</RelativeLayout>